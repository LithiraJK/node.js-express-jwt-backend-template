# ==============================================
# SERVER CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=5000
HOST=localhost

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
MONGODB_URI=mongodb://localhost:27017/your_database_name

# Production MongoDB Atlas (uncomment when deploying)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbName?retryWrites=true&w=majority

# ==============================================
# JWT CONFIGURATION
# ==============================================
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_random_32_character_secret_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30D

# ==============================================
# SECURITY
# ==============================================
BCRYPT_ROUNDS=10
CORS_ORIGIN=http://localhost:5173

# ==============================================
# SUPER ADMIN (First Time Setup Only)
# ==============================================
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=ChangeThisPassword123!
SUPERADMIN_FIRST_NAME=Super
SUPERADMIN_LAST_NAME=Admin